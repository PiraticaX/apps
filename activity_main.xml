<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bck1"
    android:layout_height="match_parent"
    tools:context=".login">

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/fresca"
        android:text="A.I CARPOOL"
        android:textAlignment="center"
        android:textColor="#adff2f"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="73dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:contentDescription="Get Paid For Travelling"
        android:fontFamily="@font/fira_sans_extra_condensed_medium"
        android:text="Travel Smart "
        android:textAlignment="center"
        android:textColor="#adff2f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="Travel Smart \n Getpaid for travelling"
        tools:textSize="24sp" />

    <EditText
        android:id="@+id/login_uname"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_btn"
        android:hint="EMAIL"
        android:textAlignment="center"
        android:textColor="#adff43"
        app:layout_constraintBottom_toTopOf="@+id/login_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:backgroundTintMode="screen" />

    <EditText
        android:id="@+id/login_pass"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/rounded_btn"
        android:hint="  PASSWORD"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#adff43"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_uname"
        tools:backgroundTintMode="screen" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="141dp"
        android:layout_height="50dp"
        android:layout_marginBottom="81dp"
        android:layout_marginEnd="121dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/button"
        android:onClick="login"
        android:text="LOGIN"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/login_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pass" />

    <TextView
        android:id="@+id/login_signup"
        android:layout_width="226dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="79dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="81dp"
        android:clickable="true"
        android:onClick="signup"
        android:text="wanna signup???"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@android:color/holo_red_light"
        android:textColorHint="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        tools:textSize="24sp" />
</android.support.constraint.ConstraintLayout>