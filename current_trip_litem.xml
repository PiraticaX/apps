<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_btn"
    android:layout_width="match_parent"
    android:layout_height="125dp">

    <TextView
        android:id="@+id/dest"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:background="?android:attr/actionModeBackground"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/vechno"
        app:layout_constraintEnd_toStartOf="@+id/route"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/route"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="25dp"
        android:background="?android:attr/actionModeBackground"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/dest"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vechno"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:background="?android:attr/actionModeBackground"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dest" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="26dp"
        android:background="?android:attr/actionModeBackground"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnavairides" />

    <TextView
        android:id="@+id/no_of_seats"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="25dp"
        android:background="?android:attr/actionModeBackground"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnavairides"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/roundgreen"
        android:textColor="#ffffff"
        android:text="RIDE NOW"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>