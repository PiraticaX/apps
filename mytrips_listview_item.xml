<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@drawable/rounded_btn">


    <TextView
        android:id="@+id/tripid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/trip_start_loc"
        app:layout_constraintEnd_toStartOf="@+id/trip_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trip_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="18dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/trip_dest_loc"
        app:layout_constraintEnd_toStartOf="@+id/triprole"
        app:layout_constraintStart_toEndOf="@+id/tripid"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trip_start_loc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="18dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trip_dest_loc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tripid" />

    <TextView
        android:id="@+id/trip_dest_loc"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_time" />

    <TextView
        android:id="@+id/triprole"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trip_time"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>